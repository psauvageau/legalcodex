{
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        ".coverage": true,
        "**/*.egg-info": true,
        ".venv/": true
    },
    "files.trimTrailingWhitespace": true,
    "chat.tools.terminal.autoApprove": {
        "/^python \\.github/copilot_skills/run_tests_skill\\.py --cwd \\. --pytest-args \"-q\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "pytest": true,
        "/^python -m legalcodex --help$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "mypy": true,
        "/^python -m mypy --strict legalcodex$/": {
            "approve": true,
            "matchCommandLine": true
        }
    },
    "cSpell.words": [
        "behavior",
        "genai",
        "legalcodex",
        "monkeypatched",
        "Workstreams"
    ],
    "terminal.integrated.shellIntegration.enabled": true
}